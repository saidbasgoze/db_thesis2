@model List<ThesisType>
@if (TempData["basarili"] != null)
{
	<h2 style="color:red">@TempData["basarili"]</h2>
}

<div class="container">

	<div class="row pt-3 row pb-5">
		<div>
			<h1>Types</h1>
		</div>
	</div>
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>
					No
				</th>
				<th>
					Thesis Type
				</th>
				<th>
				</th>
				<th>
				</th>
			</tr>
		</thead>
		<tbody>

			@foreach (var (thesisType, index) in Model.Select((value, i) => (value, i)))
			{
				<tr>


					<td>@(index + 1)</td>
					<td>@thesisType.TypeName</td>
					<td>
						<a asp-controller="ThesisType" asp-action="EkleGuncelle" asp-route-id="@thesisType.TypeId" class="btn btn-success" style="width:150px">
							Update
						</a>

					</td>
					<td>
						<a asp-controller="ThesisType" asp-action="Sil" asp-route-id="@thesisType.TypeId" class="btn btn-danger" style="width:150px">
							Delete
						</a>
					</td>
				</tr>

				
			}
		</tbody>

	</table>

	<div class="row pt-3 pb-2">
		<div>
			<a asp-controller="ThesisType" asp-action="EkleGuncelle" class="btn btn-lg btn-primary" type="button">
				Create New Thesis Type
			</a>
		</div>
	</div>
					
</div>