@model University


<form method="post">
	<input asp-for="UniversityId" hidden />

	<div class="border p-3 mt-5">
		<div class="row pb-3">
			<h2 class="text-primary">Screen of Deleting University</h2>
			<hr />
		</div>


		<div class="mb-3">
			<label asp-for="UniversityName" class="p-0"></label>
			<input asp-for="UniversityName" disabled class="form-control" />
		</div>

		<button type="submit" class="btn btn-lg btn-primary" style="width:250px">Delete University</button>

		<a asp-controller="University" asp-action="Index" class="btn btn-lg btn-primary" style="width:400px">
			Back To University List
		</a>

	</div>

</form>

