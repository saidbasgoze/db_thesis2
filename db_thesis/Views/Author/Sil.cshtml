@model Author


<form method="post">
	<input asp-for="AuthorId" hidden />

	<div class="border p-3 mt-5">
		<div class="row pb-3">
			<h2 class="text-primary">Screen of Deleting Author</h2>
			<hr />
		</div>




		<div class="mb-3">
			<label asp-for="Person.Name" class="p-0"></label>
			<select asp-for="Person.Name" asp-items="ViewBag.PersonList" class="form-select"></select>

		</div>

		</div>

		<button type="submit" class="btn btn-lg btn-primary" style="width:250px">Delete Author</button>

		<a asp-controller="Author" asp-action="Index" class="btn btn-lg btn-primary" style="width:400px">
			Back To Authors List
		</a>

	</div>

</form>

