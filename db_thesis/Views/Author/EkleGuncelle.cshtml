@model Author


<form method="post">
	<input asp-for="AuthorId" hidden />

	<div class="row">
		<div class="col-10">
			<div class="border p-3 mt-5">
				<div class="row pb-3">
					<h2 class="text-primary">@(Model == null ? "Create New Author" : "Update Author")</h2>
					<hr />
				</div>

				<div class="mb-3">
					<label asp-for="AuthorId" class="p-0"></label>
					<input asp-for="AuthorId" class="form-control" />
					<span asp-validation-for="AuthorId" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="PersonId" class="p-0"></label>
					<select asp-for="PersonId" asp-items="ViewBag.PersonList" class="form-select"></select>
					
				</div>


				

				@if (Model != null)
				{
					<button type="submit" class="btn btn-lg btn-primary" style="width:250px">Update</button>
				}
				else
				{
					<button type="submit" class="btn btn-lg btn-primary" style="width:250px">Create New Author</button>
				}

				<a asp-controller="Author" asp-action="Index" class="btn btn-lg btn-primary" style="width:400px">
					Back To Authors List
				</a>

			</div>
		</div>
		

	</div>



</form>

