@model List<Person>
@if (TempData["basarili"] != null)
{
	<h2 style="color:red">@TempData["basarili"]</h2>
}

<div class="container">

	<div class="row pt-3 row pb-5">
		<div>
			<h1>Persons</h1>
		</div>
	</div>
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>
					No
				</th>
				<th>
					PersonName
				</th>
				<th>
				</th>
				<th>
				</th>
			</tr>
		</thead>
		<tbody>
			
			@foreach (var (person, index) in Model.Select((value, i) => (value, i)))
			{
				<tr>
				

					<td>@(index+1)</td>
					<td>@person.Name</td>
					<td>
						<a asp-controller="Person" asp-action="EkleGuncelle" asp-route-id="@person.PersonId" class="btn btn-success" style="width:150px">
							Update
						</a>

					</td>
					<td>
						<a asp-controller="Person" asp-action="Sil" asp-route-id="@person.PersonId" class="btn btn-danger" style="width:150px">
							Delete
						</a>
					</td>
				</tr>

				
			}
		</tbody>

	</table>

	<div class="row pt-3 pb-2">
		<div>
			<a asp-controller="Person" asp-action="EkleGuncelle" class="btn btn-lg btn-primary" type="button">
				Create New Person
			</a>
		</div>
	</div>
					
</div>